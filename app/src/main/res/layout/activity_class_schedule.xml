<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FCFCF6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.dream2"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="오늘 날짜"

                android:textSize="20sp" />

            <TextView
                android:id="@+id/today55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.dream2"
                android:layout_gravity="center"
                android:textSize="16dp" />

            <Button
                android:id="@+id/dateButton"
                style="@style/Text.dream2"
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/gradient"
                android:text="날짜입력" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/schedule"
            style="@style/Text.dream2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="2021년 06월 10일"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/schedule2"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="200dp"
            android:text="D-13"
            android:layout_marginLeft="20dp"
            style="@style/Text.dream2"
            android:textColor="#FFCF54"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            style="@style/Text.dream1"
            android:layout_width="377dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient"
            android:gravity="center"
            android:text="오늘 수업" />

        <TextView
            android:id="@+id/textView5"
            style="@style/Text.dream2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="일본어 수업(초급)"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            style="@style/Text.dream1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="오후 6시~8시" />

        <TextView
            android:id="@+id/textView7"
            style="@style/Text.dream1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="강사 홍길동" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                style="@style/Text.dream1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/gradient"
                android:onClick="onButton2Clicked"
                android:text="접속"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/button3"
                style="@style/Text.dream1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/gradient"
                android:onClick="onButton2Clicked"
                android:text="신청취소"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/dday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="200dp"
            android:textColor="#FFC107"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView44"
            style="@style/Text.dream1"
            android:layout_width="377dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient"
            android:gravity="center"
            android:text="예정 수업" />

        <TextView
            android:id="@+id/textView54"
            style="@style/Text.dream2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="일본어 수업(중급)"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView46"
            style="@style/Text.dream1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="오후 6시~8시" />

        <TextView
            android:id="@+id/textView74"
            style="@style/Text.dream1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="강사 홍길동" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button24"
                style="@style/Text.dream1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/gradient"
                android:onClick="onButton2Clicked"
                android:text="접속"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/button4"
                style="@style/Text.dream1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/gradient"
                android:onClick="onButton2Clicked"
                android:text="신청취소"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>